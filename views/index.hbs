<div class="row">
  <div class="total-amount">
    <i class="fas fa-dollar-sign fa-3x  align-middle"></i>    
    <span class=" align-middle" style="font-size: 30px;">12345</span>
  </div>
</div>
<div class="row mx-auto"  style="width: 60%;">
  <ul class="list-group mt-5">
    {{#each records}}
    <div class="row">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="col-1 pr-2">
          <i class="fas fa-home fa-3x"></i>  
        </div>
        <div class="col-5 pl-2">  
          <p>{{ this.name }}</p>
          <p>{{ this.date }}</p>
        </div> 
        <div class="col-2">
            <span>{{ this.amount }}</span>
        </div> 
        <div class="col-4 d-flex justify-content-end">
          <a class="btn btn-success mx-3" href="./records/{{this._id}}/edit">修改</a>
          <form action="./records/{{this._id}}/?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </li>
    </div>
    {{/each}}
  </ul>

  <div class="add-btn mt-5 text-center">
    <a class="btn btn-primary mr-5" href="/records/new" role="button" >新增支出</a>
  </div>
</div>
